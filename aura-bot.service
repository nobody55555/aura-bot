[Unit]
Description=Aura AI Trading Bot
After=network.target

[Service]
Type=simple
User=your_username_here  # Replace with your user
WorkingDirectory=/path/to/aura-bot
Environment=PATH=/path/to/aura-bot/venv/bin:/usr/bin
ExecStart=/path/to/aura-bot/venv/bin/python main.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
